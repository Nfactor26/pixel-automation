<UserControl x:Class="Pixel.Automation.Editor.Core.Editors.ControlEditorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixel.Automation.Editor.Core.Editors"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"      
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Width="20" Height="20" Margin="0" Style="{DynamicResource MahApps.Styles.Button.Circle}" Content="{iconPacks:FontAwesome EditRegular}" BorderThickness="0"
                Click="OpenControlEditorWindow" Foreground="{DynamicResource MahApps.Brushes.Accent}" RenderTransformOrigin="0.5,0.5" ToolTip="Open Control Editor">
        </Button>
    </Grid>
</UserControl>
