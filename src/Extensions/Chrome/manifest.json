{
  "manifest_version": 2,

  "name": "Web.Scrapper",
  "description": "Extracts the details of html control for use in Pixel Automation application",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Scraping!"
    //"default_popup": "popup.html"
  },
  "background": {
   "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      //"css": ["mystyles.css"],
      "js": ["jquery-1.6.4.min.js","signalr.js","optimal-select.min.js","Web.Scrapper.js"],
      "all_frames" : true
   
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "http://*/*", 
    "https://*/*"
 
     //"contextMenus"   
  ],
  "content_security_policy": "script-src 'self' http://localhost:9143; object-src 'self'"  //allow connections to localhost
}