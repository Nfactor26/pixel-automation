<UserControl x:Class="Pixel.Automation.Editor.Controls.Buttons.ConfigureHttpRequestButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixel.Automation.Editor.Controls.Buttons"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Width="20" Height="20" Margin="0" Style="{DynamicResource MahApps.Styles.Button.Circle}" Content="{iconPacks:Material Cog}" BorderThickness="0"
                Foreground="{DynamicResource MahApps.Brushes.Accent}" ToolTip="Configure Mapping Scripts" Click="ConfigureHttpRequest">           
        </Button>
    </Grid>
</UserControl>
