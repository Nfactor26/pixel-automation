<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003"> 

    <PropertyGroup>
        <DesignerBuildDirectory>..\..\.builds\$(Configuration)\Designer</DesignerBuildDirectory>
        <RunnerBuildDirectory>..\..\.builds\$(Configuration)\Runner</RunnerBuildDirectory>
        <DesignerPluginDestinationFolder>$(DesignerBuildDirectory)\Plugins\$(ProjectName)</DesignerPluginDestinationFolder>
        <RunnerPluginDestinationFolder>$(RunnerBuildDirectory)\Plugins\$(ProjectName)</RunnerPluginDestinationFolder>
    </PropertyGroup>
     
     <Target Name="CopyPlugin" AfterTargets="Build">        
        <ItemGroup>         
            <PluginSourceFiles Include="$(TargetDir)\**\*.*"/>			
        </ItemGroup>		     
        <Copy  SourceFiles="@(PluginSourceFiles)"  DestinationFolder="$(DesignerPluginDestinationFolder)$(ProjectName)\%(RecursiveDir)"/>	
        <Copy  SourceFiles="@(PluginSourceFiles)"  DestinationFolder="$(RunnerPluginDestinationFolder)$(ProjectName)\%(RecursiveDir)"/>	
    </Target>

</Project>