<Project Sdk="Microsoft.NET.Sdk">
	
	<Import Project="..\Pixel.Automation.Plugin.targets" />
	
	<!--Copy runtimes directory from plugin folder to working directory of application and delete runtimes directory from plugin -->
	<!--This is required as plugin fails to load runtimes if it is not present in working directory of the application-->
	<Import Project="..\Pixel.Automation.Runtime.targets" />
		
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<EnableDynamicLoading>true</EnableDynamicLoading>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Serilog" Version="2.11.0">
			<IncludeAssets>compile</IncludeAssets>
		</PackageReference>
		<PackageReference Include="OpenCvSharp4" Version="4.6.0.20220608">
			<IncludeAssets>all</IncludeAssets>
		</PackageReference>
		<PackageReference Include="OpenCvSharp4.runtime.win" Version="4.6.0.20220608">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Pixel.Automation.Core\Pixel.Automation.Core.csproj">
			<Private>false</Private>
		</ProjectReference>
		<ProjectReference Include="..\Pixel.Automation.Core.Components\Pixel.Automation.Core.Components.csproj">
			<Private>false</Private>
			<PrivateAssets>All</PrivateAssets>
		</ProjectReference>
	</ItemGroup>

</Project>
