@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    
    <MudAppBar Elevation="4" Dense="false" Fixed="true">
        <MudToolBar DisableGutters="true">
            <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" />
        </MudToolBar>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">Pixel Dashboard</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
            <MudText Typo="Typo.subtitle2">Pixel Dashboard</MudText>
        </MudHidden>
        <MudSpacer />
        @*<LoginDisplay />*@
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="4" ClipMode="DrawerClipMode.Docked" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="ma-2">P</MudAvatar>
            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="ma-2">I</MudAvatar>
            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="ma-2">X</MudAvatar>
            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="ma-2">E</MudAvatar>
            <MudAvatar Color="Color.Primary" Size="Size.Small" Class="ma-2">L</MudAvatar>
        </MudDrawerHeader>       
        <NavMenu />
    </MudDrawer>
    <br/>
    <MudMainContent Class="mudContent">
        <MudContainer MaxWidth="MaxWidth.False" class="mt-8">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>


@code {

    public bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

