
<MudIcon Icon="@icon" Size="Size.Large" Color="color" />

@code
{
    [Parameter]
    public TestStatus Result { get; set; }

    private string icon = Icons.Material.Sharp.SentimentSatisfied;
    private Color color = Color.Success;

    protected override void OnInitialized()
    {
        if (Result == TestStatus.Failed)
        {
            icon = Icons.Material.Sharp.SentimentDissatisfied;
            color = Color.Error;
        }
    }
}
